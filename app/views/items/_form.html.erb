<% modal ||= false %>
<% remote = modal ? true : false %>
<%
if(modal == true)
@item = Item.new
end
%>
<%= form_for(@item, remote: remote, html: {role: :form, 'data-model' => 'items'}) do |form| %>

 <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
    <div class="col-lg-6 col-sm-12">
        <%= form.label :name, "* Name" %>
        <%= form.text_field :name, class: "form-control input_modal", required: true%>
    </div>

    <div class="col-lg-6 col-sm-12">
        <%= form.label :price, "* Price" %>
        <%= form.text_field :price, class: "form-control input_modal money", required: true%>
    </div>
</div>

<br>

<div class="row">

    <div class="col-lg-6 col-sm-12">
        <%= form.submit "Save", class: "btn btn-primary btn-sm", style: "width: 80px !important; height: 40px !important;", remote: true%>
    </div>

</div>

<%end%>